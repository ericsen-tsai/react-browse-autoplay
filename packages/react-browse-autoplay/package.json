  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "rimraf": "^6.0.1",
    "rolldown": "^1.0.0-beta.23",
    "rolldown-plugin-dts": "^0.13.13",
    "vitest": "^3.2.4",
    "jsdom": "^26.1.0",
    "@vitejs/plugin-react": "^4.5.2",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4"

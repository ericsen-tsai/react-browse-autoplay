{
  "name": "@erichandsen/react-browse-autoplay",
  "version": "0.0.2",
  "description": "A React component that automatically plays videos in a browser.",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "private": false,
  "type": "module",
  "scripts": {
    "build": "rimraf dist && rolldown --config rolldown.config.ts",

    "test:ui": "vitest --ui",
    "check": "biome check .",
    "format": "biome format --write",
    "tsc": "tsc --project tsconfig.json",
    "lint": "biome lint ."
  },
  "keywords": [],
  "author": "Ericsen Tsai",
  "license": "ISC",
  "packageManager": "pnpm@10.12.4",
  "peerDependencies": {
    "react": ">=18",

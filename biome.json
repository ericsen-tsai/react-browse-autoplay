{
  "$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
  "files": {
    "includes": ["**/*.{js,jsx,ts,tsx}", "*.json", "*.mjs", "*.cjs", "*.ts", "*.tsx", "*.js", "*.jsx"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedImports": "error"
      }
    },
    "domains": {
      "react": "recommended"
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentWidth": 2,
    "lineWidth": 120,
    "lineEnding": "lf",
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "indentWidth": 2,
      "lineWidth": 120,
      "lineEnding": "lf",
      "indentStyle": "space",
      "quoteStyle": "single"
    }
  }
}
